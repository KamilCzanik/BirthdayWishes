<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content">

    <TextView
            android:id="@+id/personRecyclerItem_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintStart_toEndOf="@+id/personRecyclerItem_letter_imageView"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/personRecyclerItem_birthday_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/personRecyclerItem_letter_imageView"
            app:layout_constraintTop_toBottomOf="@+id/personRecyclerItem_name_textView"/>

    <ImageView
            android:id="@+id/personRecyclerItem_letter_imageView"
            android:layout_width="@dimen/recycler_item_image_size"
            android:layout_height="@dimen/recycler_item_image_size"
            android:layout_margin="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher_round"/>

</androidx.constraintlayout.widget.ConstraintLayout>